<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 m-auto" style="margin-top: 5%;">
                <div class="container mt-5 pl-5">
                    <h2 class="text-center">Add vendor</h2>
                    <form action="/admin/add-vendor" method="post"
                        enctype="multipart/form-data"
                        style="width: 27%;margin-left:37%">

                        <div class="form-group">
                            <label for="">Name</label>
                            <input type="text" name="Name" class="form-control" required>
                        </div>

                        <div class="form-group">

                            <label for="">Place</label>
                            <input type="text" name="Place"
                                class="form-control" required>
                        </div>

                        {{!-- <div class="form-group">

                            <label for="">Category</label>
                            <input type="text" name="Category"
                                class="form-control" required>
                        </div> --}}

                        <div class="form-group">
                            <label for="">Login_name</label>
                            <input type="text" name="Login_name"
                                class="form-control" required>
                        </div>

                        <div class="form-group">
                            <label for="">Login_password</label>
                            <input type="text" name="Login_password"
                                class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="hidden" name="Status"
                                class="form-control" value="Active" >
                        </div>



                        <button type="submit" class="btn btn-success mt-4">Submit</button>
                        <a href="/admin/view-vendor" class="btn btn-warning mt-4">Cancel</a>
                        <br>
                        <br>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>