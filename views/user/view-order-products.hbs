<section>
    <div class="container mt-5">
        <dv class="row">
            {{#each products}}
            <div class="col-md-3 p-3">
                <div class="card" style="width: 18rem;height:24erm">
                    <img style="width: 50px;height:50px" class="card-img-top" src="/product-images/{{this.product._id}}.jpg"
                        alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{this.product.Productname}}</h5>

                        <p class="card-text">Rs.{{this.product.Price}}</p>
                        <p class="card-text">Quantity:{{this.quantity}}</p>

                    </div>


                </div>
            </div>
            {{/each}}
        </dv>
    </div>
</section>