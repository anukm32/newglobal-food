<section style="    background-color: lightpink;">
    <div class="container">
        <table class="table" style="margin-top: 8%;    width: 67%;margin-left: 24%;" id="productsTable">
  <thead>
    <tr>
      <th scope="col">Number</th>
      <th scope="col">Vendor Name</th>
      <th scope="col">Product Name</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th>Image</th>
       <th>Options</th>

    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Vendorname}}</td>
      <td>{{this.Productname}}</td>
     
      
       <td>{{this.Category}}</td>
      <td>{{this.Price}}</td>
      <td><img style="width: 50px;height:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
         <a href="/vendor/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/vendor/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you wnt to delete ?{{this.Name}}')">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
<br><br>
    </div>
</section>
<script>
 $(document).ready( function () {
    $('#productsTable').DataTable();
} );
</script>