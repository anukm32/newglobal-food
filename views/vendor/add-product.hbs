<section style="    background-color: lightpink;
">
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 m-auto">
                <div class="container mt-5 pl-5">
                    <h2 class="text-center">Add Product</h2>
                    <form action="/vendor/add-product" method="post" enctype="multipart/form-data"
                        style="width: 27%;margin-left:37%">

                        <div class="form-group">
                            {{!-- <label for="">VendorName</label> --}}
                            {{!-- <input type="text" name="Vendorname" class="form-control"> --}}
                            <input type="hidden" name="Vendor" class="form-control d-none" value="{{vendordetails.Name}}">
                            <input type="hidden" name="VendorId" class="form-control d-none" value="{{vendordetails._id}}">

                        </div>

                        <div class="form-group">

                            <label for="">ProductName</label>
                            <input type="text" name="Productname" class="form-control">
                        </div>

                        <div class="form-group">

                             <label for="sel1">Category</label>
                                <select class="form-control" name="Category" id="sel1">
                                    {{#each categories}}
                                    <option value="{{this.Categories}}">{{this.Categories}}</option>
                                    {{/each}}

                                </select>
                        </div>


                        <div class="form-group">
                            <label for="">Price</label>
                            <input type="number" name="Price" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="">Image</label>
                            <input type="file" name="Image" class="form-control">
                        </div>




                        <button type="submit" class="btn btn-success mt-4">Submit</button>
                        <br>
                        <br>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>